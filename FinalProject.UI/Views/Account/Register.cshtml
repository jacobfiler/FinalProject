@model FinalProject.UI.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class=" row">

        <div class="col-md-3 offset-md-3">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control  text-box-media", placeholder = "First Name" })
        </div>

        <div class="col-md-3">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control  text-box-media", placeholder = "Last Name" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6 offset-md-3">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3 offset-md-3">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control  text-box-media", placeholder = "Password" })
        </div>
        <div class="col-md-3">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control  text-box-media", placeholder = "Confirm Password" })
        </div>
    </div>
    <div class="form-group row">
        <p class="control-label col-md-2 offset-md-4">Upload Resume</p>
        <div class="col-md-4 offset-md-">
            <input type="file" name="ResumeFilename" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="offset-md-3 col-md-2">
            <input type="submit" class="btn btn-outline-success" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
